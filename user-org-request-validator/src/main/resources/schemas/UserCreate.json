{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "request": {
      "$ref": "#/definitions/User"
    }
  },
  "required": [
    "request"
  ],
  "title": "User",
  "description": "Used for business logic validation, not the db schema",
  "definitions": {
    "User": {
      "$id": "#/properties/User",
      "type": "object",
      "title": "The User Schema",
      "properties": {
        "id": {
          "type": "string",
          "title": "User ID"
        },
        "channel": {
          "type": "string",
          "default": "defaultChannel",
          "title": "User belong to the channel"
        },
        "countryCode": {
          "type": "string",
          "title": "Country code of user"
        },
        "webPages": {
          "$ref": "file:src/main/resources/schemas/Webpages.json#/definitions/Webpages"
        },
        "address": {
          "$ref": "file:src/main/resources/schemas/Address.json#/definitions/Address",
          "description": "this attribute will have user address details"
        },
        "jobProfile": {
          "$ref": "file:src/main/resources/schemas/JobProfile.json#/definitions/JobProfile",
          "description": "this attribute will have user job profile details"
        },
        "externalId": {
          "$ref": "file:src/main/resources/schemas/ExternalID.json#/definitions/ExternalId"
        },
        "education": {
          "$ref": "file:src/main/resources/schemas/Education.json#/definitions/Education"
        },
        "locationCodes": {
          "$ref": "file:src/main/resources/schemas/Location.json#/definitions/LocationCode"
        },
        "currentLoginTime": {
          "type": "string",
          "title": "Current login time"
        },
        "dob": {
          "type": "string",
          "title": "Date of birth"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "this attribute will have user email",
          "title": "Email id"
        },
        "emailVerified": {
          "id": "emailVerified",
          "type": "boolean",
          "title": "Email Verified"
        },
        "firstName": {
          "type": "string",
          "title": "First name of user"
        },
        "lastName": {
          "type": "string",
          "title": "Last name of user"
        },
        "gender": {
          "type": "string",
          "title": "Gender of user"
        },
        "language": {
          "type": "array",
          "items": {
            "type": "string",
            "uniqueItems": true
          }
        },
        "subject": {
          "type": "array",
          "items": {
            "type": "string",
            "uniqueItems": true
          }
        },
        "isDeleted": {
          "type": "boolean",
          "title": "User is deleted"
        },
        "lastLoginTime": {
          "type": "string",
          "title": "Last login time"
        },
        "phone": {
          "type": "string",
          "pattern": "[789][0-9]{9}",
          "description": "this attribute will have user phone number",
          "title": "Phone number"
        },
        "grade": {
          "type": "array",
          "items": {
            "type": "string",
            "uniqueItems": true
          }
        },
        "phoneVerified": {
          "id": "phoneVerified",
          "type": "boolean",
          "title": "Phone Verified"
        },
        "rootOrgId": {
          "type": "string",
          "title": "Root organisation ID"
        },
        "status": {
          "type": "integer",
          "description": "this attribute will have user status either is active or Inactive",
          "title": "Status"
        },
        "tncAcceptedOn": {
          "type": "string",
          "format": "date-time",
          "title": "Terms and Conditions Accepted on"
        },
        "tncAcceptedVersion": {
          "type": "string",
          "title": "Terms and Conditions Accepted Version"
        },
        "loginId": {
          "type": "string",
          "$comment": "this is not used as of now",
          "title": "Login ID"
        },
        "userName": {
          "type": "string",
          "description": "this attribute will have the user's user name",
          "title": "User name"
        },
        "userType": {
          "type": "string",
          "title": "User Type",
          "enum": [
            "OTHER",
            "TEACHER"
          ]
        },
        "frameWork": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "title": "Id of framework"
            },
            "board": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "title": "Board of education"
            },
            "gradeLevel": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "title": "Grade Level"
            },
            "medium": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "title": "Medium"
            },
            "subject": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "title": "Subject"
            }
          }
        }
      },
      "required": [
        "userName",
        "firstName",
        "lastName"
      ],
      "dependencies": {
        "email": [
          "emailVerified"
        ],
        "emailVerified": [
          "email"
        ],
        "phone": [
          "phoneVerified"
        ],
        "phoneVerified": [
          "phone"
        ]
      },
      "anyOf": [
        {
          "required": [
            "email"
          ]
        },
        {
          "required": [
            "phone"
          ]
        }
      ]
    }
  },
  "additionalProperties": false
}